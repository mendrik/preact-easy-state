{
    "name": "preact-quill",
    "version": "1.0.0",
    "description": "Set of decorators for Preact, adding state management, routing with dynamic imports, localstorage and responsive component support. No IE support.",
    "repository": "https://github.com/mendrik/preact-easy-state",
    "main": "lib/index.cjs.js",
    "module": "lib/index.es6.js",
    "types": "lib/quill.d.ts",
    "scripts": {
        "run": "parcel src/html/index.html --no-hmr",
        "github:clean": "del-cli docs/* !docs/data.csv !docs/locales.json !docs/tree.json",
        "github:bundle": "cross-env NODE_ENV=production parcel build src/html/index.html -d docs --public-url=/preact-easy-state/",
        "github:git": "git add . & git commit -m \"update github docs\"",
        "github-docs": "npm-run-all github:clean github:bundle github:git",
        "clean": "rimraf lib cjs",
        "rollup": "cross-env NODE_ENV=production rollup -c",
        "bundle": "npm-run-all rollup",
        "css:compile": "postcss src/typescript/**/*.pcss --dir cjs --base src/typescript",
        "css:compile:watch": "postcss src/typescript/**/*.pcss -w --dir cjs --base src/typescript",
        "ts:compile": "tsc -d --outDir cjs --noEmitHelpers true --importHelpers true --module commonjs",
        "ts:compile:watch": "tsc -w -d --outDir cjs --noEmitHelpers true --importHelpers true --module commonjs",
        "compile": "npm-run-all clean ts:compile css:compile",
        "compile:watch": "npm-run-all -p ts:compile:watch css:compile:watch",
        "test": "mocha --require ts-node/register --require src/typescript/util/mocha-setup.ts src/typescript/**/*.spec.*"
    },
    "author": "Andreas Herd",
    "license": "MIT",
    "dependencies": {
        "@mdi/font": "2.5.94",
        "@nx-js/observer-util": "4.2.0",
        "@types/node": "10.5.3",
        "animate.css": "3.6.1",
        "bulma": "0.7.1",
        "class-validator": "0.9.1",
        "date-fns": "2.0.0-alpha.11",
        "format-number": "3.0.0",
        "navigo": "7.1.2",
        "react-input-mask": "2.0.2",
        "shim-keyboard-event-key": "1.0.2",
        "throttle-debounce": "2.0.0"
    },
    "peerDependencies": {
        "preact": "8.2.9",
        "preact-compat": "3.18.0",
        "preact-context": "1.0.2"
    },
    "devDependencies": {
        "@types/mocha": "5.2.5",
        "@types/node": "10.5.3",
        "ajv": "6.5.2",
        "autoprefixer": "9.0.1",
        "bulma": "0.7.1",
        "chai": "4.1.2",
        "cross-env": "5.2.0",
        "cssnano": "4.0.4",
        "del-cli": "1.1.0",
        "isomorphic-fetch": "2.2.1",
        "jsdom": "16.5.0",
        "mocha": "5.2.0",
        "mq-polyfill": "1.1.8",
        "node-storage-shim": "1.0.1",
        "npm-run-all": "4.1.3",
        "parse5": "5.0.0",
        "postcss": "7.0.1",
        "postcss-cssnext": "3.1.0",
        "postcss-custom-properties": "7.0.0",
        "postcss-import": "11.1.0",
        "postcss-mixins": "6.2.0",
        "postcss-nested": "3.0.0",
        "postcss-parcel-import": "0.0.2",
        "preact": "8.2.9",
        "preact-compat": "3.18.0",
        "preact-context": "1.0.2",
        "rimraf": "2.6.2",
        "rollup-plugin-alias": "1.4.0",
        "rollup-plugin-commonjs": "9.1.3",
        "rollup-plugin-minify": "1.0.3",
        "rollup-plugin-node-resolve": "3.3.0",
        "rollup-plugin-postcss": "1.6.2",
        "rollup-plugin-typescript2": "0.16.1",
        "sinon": "6.1.4",
        "stylelint": "9.3.0",
        "ts-node": "7.0.0",
        "tslint": "5.11.0",
        "typescript": "2.9.2"
    },
    "files": [
        "lib",
        "cjs",
        "src"
    ],
    "alias": {
        "react": "preact-compat",
        "react-dom": "preact-compat"
    }
}
